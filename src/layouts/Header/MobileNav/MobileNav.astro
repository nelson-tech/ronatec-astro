---
import SearchButton from "@/components/SearchButton"
---

<script>
  import mobileMenuOpen from "@/stores/mobileMenu"

  const openMobileMenu = () => {
    mobileMenuOpen.set(true)
  }

  const mobileButton = document.getElementById("openMobileMenu")
  mobileButton?.addEventListener("click", openMobileMenu)
</script>

<div class="flex-1 flex items-center lg:hidden">
  <button
    id="openMobileMenu"
    type="button"
    class="-ml-2 bg-white w-6 h-6 rounded text-gray-400"
  >
    <span class="sr-only focus:text-white">Open menu</span>

    <svg
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      >
      </path>
    </svg>
  </button>

  <SearchButton
    className="ml-4 w-6 h-6 text-gray-400 hover:text-gray-500 cursor-pointer"
  />
</div>
